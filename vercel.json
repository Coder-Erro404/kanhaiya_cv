{
  "version": 2,
  "name": "now-django-staticfiles",
  "builds": [
    {
      "src": "now_build_staticfiles.sh",
      "use": "@now/static-build",
      "config": {
        "distDir": "staticfiles_build"
      }
    },
    {
      "src": "kanhaiya/wsgi.py",
      "use": "@ardnt/now-python-wsgi",
      "config": {
        "maxLambdaSize": "30mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "kanhaiya/wsgi.py"
    }
  ]
}